{
  "name": "@jigsaw/base-box",
  "version": "0.0.0",
  "private": true,
  "description": "Jigsaw Base Box",
  "keywords": [],
  "author": "Jigsaw",
  "scripts": {
    "clean": "del-cli 'dist/*'",
    "exec": "nw ./dist",
    "start": "npm-run-all build exec",
    "start:watch": "tsc -p tsconfig.build.json --watch",
    "build": "npm-run-all clean build:app build:resources",
    "build:debug": "npm-run-all clean build:app:debug build:resources",
    "build:app": "tsc -p tsconfig.build.json",
    "build:app:debug": "tsc -p tsconfig.debug.json",
    "build:resources": "cp -r auth config templates/index.html templates/dummy-nginx.html templates/package.json elastic-apm-node.js templates/index.js bootstrap.sh dist/",
    "in-docker:start": "nodemon --signal SIGTERM -w auth/ -w src/ -w templates/ -w config/ -e ts,yaml,yml,json,js,pem -x \"npm run build:debug && cd ./dist && exec ./bootstrap.sh --debug\"",
    "lint": "eslint -c .eslintrc.js --ext .ts ./src",
    "lint:staged": "bash -c scripts/lint-staged.sh",
    "test": "jest --detectOpenHandles",
    "start:debug": "node --inspect -r ts-node/register -r tsconfig-paths/register src/main.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.44.0",
    "@aws-sdk/client-transcribe-streaming": "^3.82.0",
    "@godaddy/terminus": "^4.9.0",
    "@jigsawinteractive/apm-utils": "^1.0.22",
    "@jigsawinteractive/mediasoup-client": "^2.1.11",
    "@jigsawinteractive/task-queue": "^2.1.1-base-box",
    "@twilio/voice-sdk": "^2.1.1",
    "agentkeepalive": "^4.2.1",
    "aws-sdk": "^2.1040.0",
    "axios": "^0.24.0",
    "axios-debug-log": "^0.8.4",
    "axios-observable": "^1.3.0",
    "axios-retry": "^3.2.4",
    "config": "^3.3.6",
    "elastic-apm-node": "^3.24.0",
    "express": "^4.17.1",
    "js-yaml": "^4.1.0",
    "kafkajs": "^1.16.0",
    "microphone-stream": "^6.0.1",
    "path": "^0.12.7",
    "prom-client": "^14.0.0",
    "rxjs": "^7.3.0",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/chrome": "0.0.86",
    "@types/jest": "^27.0.2",
    "@types/node": "^14.14.33",
    "@types/nw.js": "^0.13.14",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "blob-to-buffer": "^1.2.9",
    "del-cli": "^2.0.0",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-unused-imports": "^1.1.5",
    "jest": "^27.2.5",
    "nodemon": "^1.19.4",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^27.0.5",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
